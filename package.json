{
  "name": "@a13y/monorepo",
  "version": "0.1.3",
  "private": true,
  "description": "Type-safe accessibility enforcement layer for TypeScript",
  "license": "MIT",
  "author": {
    "name": "Diego Aneli",
    "url": "https://github.com/DiegoAneli"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/DiegoAneli/a13y.git"
  },
  "bugs": {
    "url": "https://github.com/DiegoAneli/a13y/issues"
  },
  "homepage": "https://github.com/DiegoAneli/a13y#readme",
  "scripts": {
    "build": "pnpm --filter \"./packages/*\" build",
    "dev": "pnpm --filter \"./packages/*\" dev",
    "test": "pnpm --filter \"./packages/*\" test",
    "typecheck": "pnpm --filter \"./packages/*\" typecheck",
    "clean": "pnpm --filter \"./packages/*\" clean && rm -rf node_modules",
    "prepublish": "pnpm build && pnpm test && pnpm typecheck",
    "publish:core": "cd packages/core && npm publish --access public",
    "publish:devtools": "cd packages/devtools && npm publish --access public",
    "publish:react": "cd packages/react && npm publish --access public",
    "publish:all": "pnpm prepublish && pnpm publish:core && pnpm publish:devtools && pnpm publish:react"
  },
  "keywords": [
    "accessibility",
    "a11y",
    "wcag",
    "typescript",
    "react"
  ],
  "packageManager": "pnpm@10.14.0",
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=9.0.0"
  },
  "devDependencies": {
    "typescript": "^5.9.3"
  }
}
